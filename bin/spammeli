#!/usr/bin/env ruby
$:.unshift File.expand_path('../../lib', __FILE__)

require 'rubygems'
require 'bundler/setup'
require 'spammeli'

spammeli = Cinch::Bot.new do
  configure do |c|
    c.nick = 'spammeli'
    c.realname = 'Spam Anneli'
    c.server = 'irc.quakenet.org'
    c.channels = ['#spammeli', '#mepojat']
    c.plugins.plugins = Spammeli::Commands.load
  end
end

spammeli.start